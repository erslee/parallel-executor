{
  "name": "parallel-sh",
  "version": "1.1.0",
  "description": "Run multiple commands in parallel with pretty Docker-like output",
  "main": "runner.js",
  "type": "module",
  "bin": {
    "parallel-sh": "runner.js"
  },
  "scripts": {
    "start": "node runner.js",
    "example": "node runner.js --config example-config.json",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js *.json *.md",
    "format:check": "prettier --check *.js *.json *.md",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format"
  },
  "dependencies": {},
  "keywords": [
    "npm",
    "parallel",
    "runner",
    "cli",
    "docker-like"
  ],
  "author": "ersleeq@gmail.com",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2"
  }
}
